@bot.command()
async def imagen(ctx):
    try:
        img_name = random.choice(os.listdir('images'))
        with open(f'images/{img_name}', 'rb') as f:
            await ctx.send(file=discord.File(f))
    except:
        await ctx.send("âš ï¸ No hay imÃ¡genes en la carpeta 'images'")

